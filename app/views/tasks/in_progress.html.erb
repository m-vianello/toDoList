<div class="row ml-5">
  <div class="col-9">
    <%= link_to tasks_path, { style: "margin-left: 8px; text-decoration: none" } do %>
      <i class="fa-solid fa-xmark" style="color:#16161D; font-size: 200%"></i>
    <% end %>
  </div>
  <div class="col-3 pt-1">
    <%= link_to new_task_path, { style: "margin-left: 8px; text-decoration: none" } do %>
      <i class="fa-solid fa-folder-plus" style="color:#26D95D; font-size: 150%"></i>
    <% end %>
  </div>
</div>

<%= form_for @task, url: task_mark_in_progress_path(@task.id), method: :patch do |f| %>
  <div class="my-3 p-3 bg-body rounded shadow-sm">
    <h1><strong class="text-gray-dark">Task# <%= @task.id %></strong></h1>
    <%= link_to task_path(@task.id), { style: "text-decoration: none" } do %>
      <i class="fa-regular fa-folder-open" style="color:#26D95D; font-size: 150%" ></i>
    <% end %>

    <%= link_to edit_task_path(@task.id), { style: "text-decoration: none" } do %>
      <i class="fa-regular fa-pen-to-square" style="color:#2649D9; font-size: 150%"></i>
    <% end %>

    <%= link_to task_path(@task.id), { style: "margin-left: 8px; text-decoration: none" }, method: :delete  do %>
      <i class="fa-regular fa-trash-can" style="color:#D9B626; font-size: 150%"></i>
    <% end %>
    <div class="d-flex text-muted pt-3">
      <div class="pb-3 mb-0 small lh-sm w-100">
        <div class="d-flex justify-content-between">

          <div class="row w-100">

            <div class="col-12 mb-3">
              <label for="address" class="form-label">Completed Date</label>
              <%#= f.datetime_field :completed_at, { class: "form-control", value: nil } %>
            </div>

            <%= f.hidden_field :completed_at %>
            <%= hidden_field_tag 'selected', 'none'  %>

            <div class="col-12 text-center">
              <%= f.submit "Mark In-Progress", class: "w-30 btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>