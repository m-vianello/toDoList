<%= form_with model: @task do |f| %>
  <div class="my-3 p-3 bg-body rounded shadow-sm">
    <h1><strong class="text-gray-dark">New Task</strong></h1>
    <div class="d-flex text-muted pt-3">
      <div class="pb-3 mb-0 small lh-sm w-100">
        <div class="d-flex justify-content-between">

          <div class="row">

            <div class="col-12 mb-3">
              <label for="address" class="form-label">Note</label>
              <%= f.text_field :note, { class: "form-control", placeholder: "my todo is...", required: true }  %>
            </div>

            <div class="col-12  mb-3">
              <label for="address" class="form-label">Due Date (default 1 week)</label>
              <%= f.datetime_field :due_date, { class: "form-control", value: (Time.zone.now + 1.week).strftime("%Y-%m-%dT%k:%M") } %>
            </div>

            <div class="col-12 text-center">
              <%= f.submit class: "w-25 btn btn-primary btn-lg" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
