<div class="row ml-5">
  <div class="col-9">
    <%= link_to tasks_path, { style: "margin-left: 8px; text-decoration: none" } do %>
      <i class="fa-solid fa-xmark" style="color:#16161D; font-size: 200%"></i>
    <% end %>
  </div>
  <div class="col-3 pt-1 text-end">
    <%= link_to new_task_path, { style: "margin-right: 20px; margin-left: 20px; text-decoration: none" } do %>
      <i class="fa-solid fa-folder-plus" style="color:#26D95D; font-size: 150%"></i>
    <% end %>
  </div>
</div>


<%= form_for @task do |f| %>
  <div class="mb-3 p-3 bg-body rounded shadow-sm">
    <div class="row">
    <div class="col">
      <h1><strong class="text-gray-dark">Task# <%= @task.id %></strong></h1>

    </div>
    <div class="col text-end pr-3">
      <div class="row pb-3">
        <div class="col">
          <%= link_to task_path(@task.id), { style: "text-decoration: none" } do %>
            <i class="fa-regular fa-folder-open" style="color:#26D95D; font-size: 150%" ></i>
          <% end %>
        </div>
        <div class="col">
          <%= link_to edit_task_path(@task.id), { style: "text-decoration: none" } do %>
            <i class="fa-regular fa-pen-to-square" style="color:#2649D9; font-size: 150%"></i>
          <% end %>
        </div>
      </div>
      <div class="row pb-5">
        <% if @task.completed_at.nil? %>
          <div class="col">
            <%= form_for @task, url: task_mark_in_progress_path(@task.id), method: :patch do |f| %>
              <%= f.button nil, class: "btn p-0" do %>
                <i class="fa-solid fa-repeat" style="color:#999999; font-size: 150%"></i>
              <% end %>
            <% end %>
          </div>
          <div class="col">
            <%= form_for @task, url: task_mark_complete_path(@task.id), method: :patch do |f| %>
              <%= f.button nil, class: "btn p-0" do %>
                <i class="fa-regular fa-circle-check" style="color:#D926A2; font-size: 130%"></i>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="col">
            <%= form_for @task, url: task_mark_in_progress_path(@task.id), method: :patch do |f| %>
              <%= f.button nil, class: "btn p-0" do %>
                <i class="fa-solid fa-repeat" style="color:#D926A2; font-size: 150%"></i>
              <% end %>
            <% end %>
          </div>
          <div class="col">
            <%= form_for @task, url: task_mark_complete_path(@task.id), method: :patch do |f| %>
              <%= f.button nil, class: "btn p-0" do %>
                <i class="fa-regular fa-circle-check" style="color:#999999; font-size: 130%"></i>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="row">
        <div class="col"></div>
        <div class="col">
          <%= link_to task_path(@task.id), { style: "text-decoration: none" }, method: :delete  do %>
            <i class="fa-regular fa-trash-can" style="color:#D9B626; font-size: 150%"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>




    <div class="d-flex text-muted pt-3">
      <div class="pb-3 mb-0 small lh-sm w-100">
        <div class="d-flex justify-content-between">

          <div class="row">

            <div class="col-12 mb-3">
              <label for="address" class="form-label">Note</label>
              <%= f.text_field :note, { class: "form-control", placeholder: "my todo is..." } %>
            </div>

            <div class="col-12  mb-3">
              <label for="address" class="form-label">Due Date</label>
              <%= f.datetime_field :due_date, { class: "form-control" } %>
            </div>

            <div class="col-12 mb-3">
              <label for="effort_level" class="form-label">Effort Level</label>
              <div class="rounded border p-2">
                <div class="row">
                  <div class="col">
                    <i class="fa-solid fa-spoon" style="color:#26D95D"></i>
                  </div>
                  <div class="col text-center">
                    <i class="fa-solid fa-spoon" style="color:#2649D9"></i>
                    <i class="fa-solid fa-spoon" style="color:#2649D9"></i>
                  </div>
                  <div class="col text-end">
                    <i class="fa-solid fa-spoon" style="color:#D926A2"></i>
                    <i class="fa-solid fa-spoon" style="color:#D926A2"></i>
                    <i class="fa-solid fa-spoon" style="color:#D926A2"></i>
                  </div>
                </div>
                <%= f.range_field :effort_level, in: 1..3, step:'1', class:"slide form-controller w-100 mt-2"%>
              </div>
            </div>

            <div class="col-12 text-center">
              <%= f.submit "Update", class: "w-25 btn btn-primary  btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
