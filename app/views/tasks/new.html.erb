<div class="row ml-5">
  <div class="col">
    <%= link_to tasks_path, { style: "margin-left: 8px; text-decoration: none" } do %>
      <i class="fa-solid fa-xmark" style="color:#16161D; font-size: 200%"></i>
    <% end %>
  </div>
  <div class="col text-end">
  </div>
</div>

<%= form_with model: @task do |f| %>
  <div class="mb-3 p-3 bg-body rounded shadow-lg">
    <h1><strong class="text-gray-dark">New Task</strong></h1>
    <div class="d-flex text-muted pt-3">
      <div class="pb-3 mb-0 small lh-sm w-100">
        <div class="d-flex justify-content-between">

          <div class="row">

            <div class="col-12 mb-3">
              <label for="note" class="form-label">Title</label>
              <%= f.text_field :title, { class: "form-control", placeholder: "my todo is...", required: true }  %>
            </div>

            <div class="col-12 mb-3">
              <label for="note" class="form-label">Note</label>
              <%= f.text_field :note, { class: "form-control", placeholder: "a note about my todo is..." }  %>
            </div>

            <div class="col-12  mb-3">
              <label for="due_date" class="form-label">Due Date (default 1 week)</label>
              <%= f.datetime_field :due_date, { class: "form-control", value: (Time.zone.now + 1.week).strftime("%Y-%m-%dT%k:%M") } %>
            </div>

            <div class="col-12 mb-3 ">
              <label for="effort_level" class="form-label">Effort Level</label>
              <div class="rounded border p-2">
                <div class="row">
                  <div class="col">
                    <i class="fa-solid fa-spoon" style="color:#26D95D"></i>
                  </div>
                  <div class="col text-center">
                    <i class="fa-solid fa-spoon" style="color:#2649D9"></i>
                    <i class="fa-solid fa-spoon" style="color:#2649D9"></i>
                  </div>
                  <div class="col text-end">
                    <i class="fa-solid fa-spoon" style="color:#D926A2"></i>
                    <i class="fa-solid fa-spoon" style="color:#D926A2"></i>
                    <i class="fa-solid fa-spoon" style="color:#D926A2"></i>
                  </div>
                </div>
                <%= f.range_field :effort_level, in: 1..3, step:'1', class:"slide form-range my-4"%>
              </div>
            </div>


            <div class="col-12 text-center">
              <%= f.submit "Create", class: "w-25 btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>



